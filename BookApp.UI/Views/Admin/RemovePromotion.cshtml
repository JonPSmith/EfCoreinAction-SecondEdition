@model BookApp.ServiceLayer.DefaultSql.Books.Dtos.RemovePromotionDto

<h2>Remove Book Promotion</h2>

<form asp-controller="Admin" asp-action="RemovePromotion" method="post">
    <!-- Input and Submit elements -->
    <input name="BookId" type="hidden" value="@Model.BookId"/>

    <div class="form-group">
        <div class="col-sm-2">
            <label>Book Title</label>
        </div>
        <div class="col-sm-10">
            @Model.Title
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <button type="submit">Remove promotion</button>
        </div>
    </div>

</form>
